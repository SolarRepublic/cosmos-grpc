{
  "name": "@solar-republic/cosmos-grpc",
  "description": "Generates tree-shakable TypeScript APIs from the .proto files of any blockchain built using Cosmos-SDK.",
  "version": "0.10.2",
  "type": "module",
  "main": "build/dist/main.js",
  "files": [
    "build/dist/"
  ],
  "exports": {
    ".": "./build/dist/api/main.js",
    "./*": "./build/dist/proto/*.js"
  },
  "bin": {
    "protoc-gen-secret": "./build/protoc/run.js"
  },
  "author": "Blake Regalia <blake.regalia@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf build",
    "proto:build": "./scripts/build.sh",
    "plugin:run": "./scripts/run-plugin.sh",
    "build": "yarn clean && yarn proto:build && yarn plugin:run",
    "debug": "yarn build debug"
  },
  "dependencies": {
    "@solar-republic/crypto": "^0.2.1",
    "google-protobuf": "^3.21.2",
    "protobufjs": "^7.2.5"
  },
  "devDependencies": {
    "@blake.regalia/belt": "^0.31.0",
    "@blake.regalia/eslint-config-elite": "^0.4.0",
    "@blake.regalia/tsconfig": "^0.2.0",
    "@solar-republic/types": "^0.2.0",
    "@types/diff": "^5.0.9",
    "@types/google-protobuf": "^3.15.12",
    "@types/node": "^20.11.0",
    "@typescript-eslint/parser": "^6.18.1",
    "diff": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "proto-parser": "^0.0.9",
    "resolve-tspaths": "^0.8.17",
    "ts-morph": "^21.0.1",
    "ts-node": "^10.9.2",
    "ts-proto": "^1.166.2",
    "ts-toolbelt": "^9.6.0",
    "tsc-esm-fix": "^2.20.21",
    "typescript": "^5.3.3"
  }
}
