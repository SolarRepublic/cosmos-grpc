{
	"extends": "@blake.regalia/tsconfig/tsconfig.node.json",

	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "build",

		"declaration": true,
		"declarationDir": "build",
		"noImplicitReturns": false,

		"allowJs": false,

		"module": "ESNext"
	},

	"include": [
		"src/**/*.ts",
	],

	"ts-node": {
		"experimentalSpecifierResolution": "node"
	},
}

